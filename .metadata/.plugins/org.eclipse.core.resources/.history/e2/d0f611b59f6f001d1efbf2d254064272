<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pet.mapper.MemberMapper">
	
	<!-- 회원 가입 -->
	<insert id = "mJoin">
	<![CDATA[
		insert into member 
		values(#{id}, #{password}, #{name}, #{birthday}, #{phone}, #{address}, #{email}, #{cateName)
	]]>
	</insert>

	<!-- 로그인 -->
	<select id = "mLogin" resultType = "com.pet.model.MemberVO">
	<![CDATA[
		select id, m_name, m_birth, m_pw, m_phone, m_email, m_sub
		from member 
		where id = #{id} and m_pw = #{m_pw}
	]]>
	</select>

	<!-- 아이디 중복검사 -->
	<select id = "idCheck" resultType="int">
		
		select count(*) from member where id = #{id}
		
	</select>
</mapper>